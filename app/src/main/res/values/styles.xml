<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:homeAsUpIndicator">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#ffff3017</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="mycustomalert" parent="@android:style/Widget.PopupWindow">
        <item name="android:shape">rectangle</item>
        <item name="android:radius">2dp</item>
        <item name="android:color">@color/white_text</item>
        <item name="android:insetBottom">16dp</item>
        <item name="android:insetLeft">16dp</item>
        <item name="android:insetRight">16dp</item>
        <item name="android:insetTop">16dp</item>
        <item name="android:windowBackground">@drawable/cell_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
